@{
}
@model List< NorthWind.Models.Product>

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>ProductID</th>
             <th>ProductNAME</th>
             <th>QuantityPerUnit</th>
             <th>UnitPrice</th>
             <th>Discontinued</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <th>@product.ProductID</th>
                <th>@product.ProductName</th>
                <th>@product.QuantityPerUnit</th>
                <th>@product.UnitPrice</th>
                <th>
                    <a class="btn btn-primary" asp-controller="NorthWind" asp-action="Edit" asp-route-ProductID="@product.ProductID">Edit</a></th>
            </tr>
            
        }

    </tbody>

</table>