@model NorthWind.Models.AddProductViewModel

<hi> Add Product</hi>

<form  method="post">
    <div class="mt-3" >
        <label class="form-label">ProductID</label>
        <input type="text" class="form-control" readonly />
    </div>

    <div class="mt-3" >
        <label class="form-label">ProductName</label>
            <input type="text" class="form-control" asp-for="ProductName" />
    </div>

    <div class="mt-3">
        <label class="form-label">QuantityPerUnit</label>
            <input type="text" class="form-control" asp-for="QuantityPerUnit" />
    </div>

    <div class="mt-3">
        <label class="form-label">UnitPrice</label>
            <input type="text" class="form-control" asp-for="UnitPrice" />
    </div>

    <div class="mt-3">

            <input type="checkbox" class="form-check-input" id="Discontinued" asp-for="Discontinued" />
        <label class="form-label-label" for="Discontinued">Discontinued</label>
    </div>

    <div class ="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>

    </div>
</form>